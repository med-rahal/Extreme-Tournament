{% extends 'baseback.html.twig'%}
{%  block body  %}
<body>
<div class="row">
    <div  style="display: flex;align-items: center;justify-content: center;margin-top: 150px; padding: 10px;">

        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Add Blog Backend ADMIN</h5>

                <!-- General Form Elements -->
                {{ form_start(f,{attr:{novalidate:'novalidate'}}) }}
                <label for="inputText" class="col-sm-4 col-form-label">Titre</label>
                <div class="col-sm-10">
                    {{ form_widget(f.titre,{'attr':{'class':'form-control'}}) }}

                </div>
                {{ form_errors(f.titre,{'attr':{'class':'text-danger'}}) }}



                <label for="inputText" class="col-sm-4 col-form-label">Status</label>
                <div class="col-sm-10">
                    {{ form_widget(f.status,{'attr':{'class':'form-control'}}) }}

                </div>
                {{ form_errors(f.status,{'attr':{'class':'text-danger'}}) }}

                <label for="inputText" class="col-sm-4 col-form-label">date</label>
                <div class="col-sm-10">
                    {{ form_widget(f.dateCreation,{'attr':{'class':'form-control'}}) }}
                </div>
                {{ form_errors(f.dateCreation,{'attr':{'class':'text-danger'}})
                }}
                <label for="inputText" class="col-sm-4 col-form-label">image</label>
                <div class="col-sm-10">
                    {{ form_widget(f.image,{'attr':{'class':'form-control'}}) }}
                </div>
                {{ form_errors(f.image,{'attr':{'class':'text-danger'}}) }}

                <label for="inputText" class="col-sm-4 col-form-label">id_user</label>
                <div class="col-sm-10">
                    {{ form_widget(f.id_user,{'attr':{'class':'form-control'}}) }}
                </div>
                {{ form_errors(f.id_user,{'attr':{'class':'text-danger'}}) }}



                <br/>
                <div class="col-sm-10" style="display: flex;align-items: center;justify-content: center">

                    {{ form_widget(f.modifier,{'attr':{'class':'btn btn-primary'}}) }}
                </div>

                {{ form_end(f) }}

            </div>
        </div>

    </div>

</div>

</div>

</body>


{% endblock %}