{% extends 'base.html.twig'%}
{% block body %}
    <div class="row">
        <div  style="display: flex;align-items: center;justify-content: center;margin-top: 200px; padding: 10px;">


        <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Add Comment</h5>

                    <!-- General Form Elements -->
                    {{ form_start(f,{attr:{novalidate:'novalidate'}}) }}
                    <label for="inputText" class="col-sm-4 col-form-label" style="color: black">Text</label>
                    <div class="col-sm-10">
                        {{ form_widget(f.text,{'attr':{'class':'form-control'}}) }}

                    </div>
                    {{ form_errors(f.text,{'attr':{'class':'text-danger'}}) }}







                    <label for="inputText" class="col-sm-4 col-form-label" style="color: black">User</label>
                    <div class="col-sm-10">
                        {{ form_widget(f.id_user,{'attr':{'class':'form-control'}}) }}
                    </div>
                    {{ form_errors(f.id_user,{'attr':{'class':'text-danger'}}) }}


                    <br/>
                    <div class="col-sm-10" style="display: flex;align-items: center;justify-content: center">

                        {{ form_widget(f.Ajouter,{'attr':{'class':'btn btn-primary'}}) }}
                    </div>

                    {{ form_end(f) }}

                </div>
            </div>

        </div>

    </div>


{% endblock %}