{% extends 'base.html.twig'%}
{% block body %}

    <div class="row">


        <div  style="display: flex;align-items: center;justify-content: center;margin-top: 200px; padding: 10px;">

            <div class="card">
                <div class="card-body">
                    <h5 class="card-title"style="color: black">Add Your Post</h5>

                    <!-- General Form Elements -->
                    {{ form_start(f,{attr:{novalidate:'novalidate'}}) }}
                    <label for="inputText" class="col-sm-4 col-form-label" style="color: black">Titre</label>
                    <div class="col-sm-10">
                        {{ form_widget(f.titre,{'attr':{'class':'form-control'}}) }}

                    </div>
                    {{ form_errors(f.titre,{'attr':{'class':'text-danger'}}) }}



                    <label for="inputText" class="col-sm-4 col-form-label"style="color: black">Status</label>
                    <div class="col-sm-10">
                        {{ form_widget(f.status,{'attr':{'class':'form-control'}}) }}

                    </div>
                    {{ form_errors(f.status,{'attr':{'class':'text-danger'}}) }}




                    <label for="inputText" class="col-sm-4 col-form-label" style="color: black">id_user</label>
                    <div class="col-sm-10">
                        {{ form_widget(f.id_user,{'attr':{'class':'form-control'}}) }}
                    </div>
                    {{ form_errors(f.id_user,{'attr':{'class':'text-danger'}}) }}



                    <br/>
                    <div class="col-sm-10" style="display: flex;align-items: center;justify-content: center">

                        {{ form_widget(f.Ajouter,{'attr':{'class':'btn btn-primary'}}) }}
                    </div>

                    {{ form_end(f) }}

                </div>
            </div>

        </div>

    </div>


{% endblock %}